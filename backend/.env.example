# My - Environment Configuration Template
# Copy this file to .env and fill in your values

# ===== API KEYS (Optional - for cloud acceleration) =====

# GitHub (for private repos and higher rate limits)
GITHUB_TOKEN=

# Hugging Face (for cloud AI models)
HUGGINGFACE_TOKEN=

# OpenAI (optional, paid service)
OPENAI_API_KEY=

# Anthropic Claude (optional, paid service)
ANTHROPIC_API_KEY=

# Replicate (optional, paid service)
REPLICATE_TOKEN=

# ===== LOCAL AI CONFIGURATION =====

# Ollama URL (if running locally)
OLLAMA_URL=http://localhost:11434

# vLLM URL (if running locally)
VLLM_URL=http://localhost:8080

# llama.cpp path (if installed)
LLAMACPP_PATH=/usr/local/bin/llama-cpp

# Use local models by default (true/false)
USE_LOCAL_MODELS=true

# ===== DATABASE =====

# Database URL (SQLite by default)
DATABASE_URL=sqlite:///./my_database.db

# ===== SERVER CONFIGURATION =====

# Backend host
BACKEND_HOST=0.0.0.0

# Backend port
BACKEND_PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ===== AGENT CONFIGURATION =====

# Maximum iterations for AI agents
MAX_AGENT_ITERATIONS=10

# Timeout for agent operations (seconds)
AGENT_TIMEOUT=300

# ===== BUILD CONFIGURATION =====

# Build cache directory
BUILD_CACHE_DIR=/tmp/my_builds

# Workspace directory
WORKSPACE_DIR=/tmp/my_workspace

# ===== LOGGING =====

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./my_app.log

# ===== SECURITY =====

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-this

# Token expiration (seconds)
TOKEN_EXPIRATION=86400

# ===== FEATURES =====

# Enable voice assistant
ENABLE_VOICE=true

# Enable GitHub integration
ENABLE_GITHUB=true

# Enable cloud builds
ENABLE_CLOUD_BUILDS=false

# ===== TERMUX/ANDROID SPECIFIC =====

# Termux storage path (if on Android)
TERMUX_STORAGE=/data/data/com.termux/files/home/storage

# Use limited resources mode (for low-end devices)
LIMITED_RESOURCES=false
